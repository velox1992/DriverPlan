<Window x:Class="DriverPlan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:DriverPlan.viewmodel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding HelloBinding}" />
            <Button Command="{Binding OpenDataSetCommand}" Content="Datenstand laden" />
            <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding DriverPlanEntries}" Height="200"></DataGrid>
        </StackPanel>
    </Grid>
</Window>