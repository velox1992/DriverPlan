<Window x:Class="DriverPlan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:DriverPlan.viewmodel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="{Binding HelloBinding}" />
            <Button DockPanel.Dock="Top" Command="{Binding OpenDataSetCommand}" Content="Datenstand laden" />
            
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Fahrer"></Label>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewItemName, Mode=TwoWay}"></TextBox>
                    <Label Grid.Row="1" Grid.Column="0" Content="Notiz"></Label>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewItemNote, Mode=TwoWay}"></TextBox>
                    <Label Grid.Row="2" Grid.Column="0" Content="Datum"></Label>
                    <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding NewItemDate, Mode=TwoWay}"></DatePicker>
                </Grid>
                <Button Command="{Binding AddNewItemCommand}"  Content="Add"></Button>
            </StackPanel>
            <DataGrid AutoGenerateColumns="False" ColumnWidth="*" VerticalScrollBarVisibility="Visible" ItemsSource="{Binding DriverPlanEntries}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fahrer" Binding="{Binding Driver}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Notiz" Binding="{Binding Note}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

        </DockPanel>

    </Grid>
</Window>